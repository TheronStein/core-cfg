{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Browser Data Template",
  "description": "Template for structured browser data in JSON format",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Metadata about this data file",
      "properties": {
        "name": {
          "type": "string",
          "description": "Browser name"
        },
        "version": {
          "type": "string",
          "description": "Data format version"
        },
        "generated": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when data was generated"
        },
        "description": {
          "type": "string",
          "description": "Brief description of the data"
        }
      },
      "required": ["name", "version"]
    },
    "items": {
      "type": "array",
      "description": "Array of selectable items",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for this item"
          },
          "name": {
            "type": "string",
            "description": "Display name shown in fzf"
          },
          "value": {
            "type": "string",
            "description": "The actual value/command/path"
          },
          "description": {
            "type": "string",
            "description": "Detailed description shown in preview"
          },
          "category": {
            "type": "string",
            "description": "Optional category for grouping"
          },
          "tags": {
            "type": "array",
            "description": "Tags for searching/filtering",
            "items": {
              "type": "string"
            }
          },
          "metadata": {
            "type": "object",
            "description": "Additional metadata for this item",
            "additionalProperties": true
          }
        },
        "required": ["name", "value"]
      }
    },
    "categories": {
      "type": "array",
      "description": "Optional category definitions",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Category identifier"
          },
          "name": {
            "type": "string",
            "description": "Display name"
          },
          "description": {
            "type": "string",
            "description": "Category description"
          },
          "icon": {
            "type": "string",
            "description": "Icon or emoji for display"
          }
        },
        "required": ["id", "name"]
      }
    }
  },
  "required": ["items"],
  "examples": [
    {
      "metadata": {
        "name": "example-browser",
        "version": "1.0.0",
        "generated": "2024-11-30T00:00:00Z",
        "description": "Example browser data"
      },
      "categories": [
        {
          "id": "cat1",
          "name": "Category 1",
          "description": "First category",
          "icon": "üìÅ"
        },
        {
          "id": "cat2",
          "name": "Category 2",
          "description": "Second category",
          "icon": "üìÇ"
        }
      ],
      "items": [
        {
          "id": "item1",
          "name": "Example Item 1",
          "value": "example-value-1",
          "description": "This is the first example item with detailed description",
          "category": "cat1",
          "tags": ["example", "demo", "first"],
          "metadata": {
            "author": "user",
            "created": "2024-11-30",
            "custom_field": "custom_value"
          }
        },
        {
          "id": "item2",
          "name": "Example Item 2",
          "value": "example-value-2",
          "description": "This is the second example item",
          "category": "cat2",
          "tags": ["example", "demo", "second"]
        }
      ]
    }
  ]
}

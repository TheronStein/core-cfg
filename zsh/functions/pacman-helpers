# Pacman helper functions with automatic sudo

# Search packages
pacs() {
    pacman -Ss "$@"
}

# Install packages
paci() {
    sudo pacman -S "$@"
}

# Remove packages
pacr() {
    sudo pacman -R "$@"
}

# Remove packages with dependencies
pacrs() {
    sudo pacman -Rs "$@"
}

# Update system
pacu() {
    sudo pacman -Syu
}

# Query installed packages
pacq() {
    pacman -Q "$@"
}

# Query package info
pacqi() {
    pacman -Qi "$@"
}

# List orphaned packages
paco() {
    pacman -Qdt
}

# Clean package cache
pacc() {
    sudo pacman -Sc
}

# Search installed packages
pacqs() {
    pacman -Qs "$@"
}

# List explicitly installed packages
pace() {
    pacman -Qe
}

# Fuzzy find and install packages
pacf() {
    ~/.core/bin/pacfzf "$@"
}

# Search specific repository
pacrepo() {
    ~/.core/bin/pacrepo "$@"
}

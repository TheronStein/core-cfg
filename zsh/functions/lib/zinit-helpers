# Zinit helper functions - autoloaded

# Shorten zinit command with turbo mode
function zt() {
    zinit depth'3' lucid ${1/#[0-9][a-c]/wait"${1}"} "${@:2}"
}

# Check if command exists (for conditional loading)
function has() {
    print -lr -- ${(j: && :):-"[[ ! -v commands[${^@}] ]]"}
}

# Clean up after cargo builds
function mv_clean() {
    print -lr -- "command mv -f tar*/rel*/${1:-%PLUGIN%} . && cargo clean"
}

# FZF Theme: One Dark
# Atom One Dark theme for fzf
# Author: One Dark Theme

FZF_THEME_NAME="One Dark"
FZF_THEME_CATEGORY="dark"

# Color definitions
FZF_THEME_COLORS=(
    "bg:#282c34"
    "bg+:#3e4451"
    "fg:#abb2bf"
    "fg+:#abb2bf"
    "hl:#e06c75"
    "hl+:#e06c75"
    "info:#61afef"
    "marker:#98c379"
    "pointer:#c678dd"
    "prompt:#e5c07b"
    "spinner:#56b6c2"
    "header:#5c6370"
    "border:#4b5263"
    "label:#61afef"
    "query:#abb2bf"
    "gutter:#282c34"
    "separator:#3e4451"
    "scrollbar:#61afef"
    "preview-bg:#282c34"
    "preview-fg:#abb2bf"
    "preview-border:#3e4451"
)

# Layout settings
FZF_THEME_LAYOUT=(
    "--height=80%"
    "--layout=reverse"
    "--border=rounded"
    "--info=inline"
    "--margin=1"
    "--padding=1"
)

# Prompt and marker characters
FZF_THEME_PROMPT='> '
FZF_THEME_POINTER='>'

# FZF Theme: Nord
# An arctic, north-bluish clean theme
# Author: arcticicestudio

FZF_THEME_NAME="Nord"
FZF_THEME_CATEGORY="dark"

# Color definitions
FZF_THEME_COLORS=(
    "bg:#2e3440"
    "bg+:#3b4252"
    "fg:#d8dee9"
    "fg+:#eceff4"
    "hl:#88c0d0"
    "hl+:#8fbcbb"
    "info:#81a1c1"
    "marker:#a3be8c"
    "pointer:#bf616a"
    "prompt:#ebcb8b"
    "spinner:#b48ead"
    "header:#5e81ac"
    "border:#4c566a"
    "label:#81a1c1"
    "query:#d8dee9"
    "gutter:#2e3440"
    "separator:#3b4252"
    "scrollbar:#81a1c1"
    "preview-bg:#2e3440"
    "preview-fg:#d8dee9"
    "preview-border:#3b4252"
)

# Layout settings
FZF_THEME_LAYOUT=(
    "--height=80%"
    "--layout=reverse"
    "--border=rounded"
    "--info=inline"
    "--margin=1"
    "--padding=1"
)

# Prompt and marker characters
FZF_THEME_PROMPT='> '
FZF_THEME_POINTER='>'
FZF_THEME_MARKER='*'

# Header configuration
FZF_THEME_HEADER_FIRST=true

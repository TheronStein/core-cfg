FZF_THEME_COLORS=(
    "bg:#1a1b26"
    "bg+:#292e42"
    "fg:#c0caf5"
    "fg+:#c0caf5"
    "hl:#ff9e64"
    "hl+:#ff9e64"
    "info:#7aa2f7"
    "marker:#9ece6a"
    "pointer:#bb9af7"

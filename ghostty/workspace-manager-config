# Workspace Manager TUI Config
# Fast, minimal config for FZF browser popups

# Base config
config-file = /home/theron/.config/ghostty/config

# Window identification
title = Workspace Manager

# No decorations for clean popup
gtk-titlebar = false
window-decoration = false

# Size - 160 cols x 40 rows (comfortable for FZF browser with preview)

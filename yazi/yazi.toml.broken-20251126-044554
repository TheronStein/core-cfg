# Plugin configuration - inherits from symlinked init.lua
[plugin]

# ━━━ PRELOADERS - Load metadata in background (MAX 32 total with fetchers!) ━━━
prepend_preloaders = [
  # Media files - consolidated
  { mime = "{audio,video,image}/*", run = "mediainfo" },  # All media metadata
  { mime = "audio/*", run = "exifaudio" },                # Audio-specific details

  # Data/Database files - consolidated patterns
  { name = "*.{csv,tsv,json,jsonl,parquet,arrow,txt}", run = "duckdb", multi = false },
  { name = "*.{db,sqlite,sqlite3,duckdb}", run = "duckdb", multi = false },
  { name = "*.{xlsx,xls,ods}", run = "duckdb", multi = false },

  # 3D model files - consolidated patterns
  { name = "*.{3mf,obj,pts,ply,stl,step,stp}", run = "f3d-preview" },
  { name = "*.{fbx,gltf,glb}", run = "f3d-preview" },
]

# ━━━ PREVIEWERS - What actually displays ━━━
prepend_previewers = [
  # Most specific patterns FIRST!
  { name = "*.md", run = "glow" },                   # Markdown rendering

  # ━━━ COMPREHENSIVE IMAGE SUPPORT - ALL formats ━━━
  { mime = "image/*", run = "image" },               # Universal image preview (jpeg, png, webp, gif, svg, bmp, tiff, ico, etc.)

  # Media files
  { mime = "audio/*", run = "exifaudio" },                # Audio info display
  { mime = "video/*", run = "video" },                    # Video preview

  # Data/Database files - comprehensive coverage
  { name = "*.{csv,tsv}", run = "duckdb" },
  { name = "*.{json,jsonl,ndjson}", run = "duckdb" },
  { name = "*.{parquet,arrow}", run = "duckdb" },
  { name = "*.{db,sqlite,sqlite3,duckdb}", run = "duckdb" },

  # Spreadsheets
  { name = "*.{xlsx,xls,ods}", run = "duckdb" },

  # 3D model files
  { name = "*.{3mf,obj,pts,ply,stl,step,stp,fbx,gltf,glb}", run = "f3d-preview" },

  # Archive files - comprehensive support
  { mime = "application/*zip", run = "ouch" },
  { mime = "application/x-tar", run = "ouch" },
  { mime = "application/x-bzip2", run = "ouch" },
  { mime = "application/x-7z-compressed", run = "ouch" },
  { mime = "application/x-rar", run = "ouch" },
  { mime = "application/vnd.rar", run = "ouch" },
  { mime = "application/x-xz", run = "ouch" },
  { mime = "application/xz", run = "ouch" },
  { mime = "application/x-zstd", run = "ouch" },
  { mime = "application/zstd", run = "ouch" },
  { mime = "application/java-archive", run = "ouch" },
  { mime = "application/gzip", run = "ouch" },
  { mime = "application/x-compress", run = "ouch" },

  # PDF files
  { mime = "application/pdf", run = "pdf" },
]

append_previewers = [
  # DISABLED FOR DEBUGGING - these were causing issues

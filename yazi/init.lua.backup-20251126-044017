-- ERROR HANDLING & SAFE LOADING
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

local error_log = os.getenv("HOME") .. "/.core/cfg/yazi/plugin_errors.log"

-- Safe require with error logging
local function safe_require(module_name)
	local success, result = pcall(require, module_name)
	if not success then
		local error_msg =
			string.format("[%s] Failed to load '%s': %s\n", os.date("%Y-%m-%d %H:%M:%S"), module_name, result)
		local file = io.open(error_log, "a")
		if file then
			file:write(error_msg)
			file:close()
		end
		return nil
	end
	return result
end

-- Safe require with existence check
local function safe_require_checked(module_name)
	local user = os.getenv("USER") or "theron"
	local home = os.getenv("HOME") or "/home/theron"
	local core = os.getenv("CORE") or home .. "/.core"
	local path_to_cfg = os.getenv("CORE_CFG") or os.getenv("CORECFG") or core .. "/.sys/cfg"

	local yazi = os.getenv("YAZI_CONFIG_HOME") or path_to_cfg .. "/yazi" or home .. "/.config/yazi"

	local plugin_dir = yazi .. "/plugins/" .. module_name .. ".yazi"
	local plugin_dev = yazi .. "/dev/" .. module_name .. ".yazi"

	-- Check plugins/ directory first, then dev/ directory
	local stat = io.popen("test -d '" .. plugin_dir .. "' || test -d '" .. plugin_dev .. "' && echo 'exists'")
	local exists = stat:read("*a"):match("exists")
	stat:close()

	if not exists then
		return nil
	end

	return safe_require(module_name)
end


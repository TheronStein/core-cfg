    "s",
  ], run = "plugin projects quit", desc = "Save current project" },
  { on = [
    "P",
    "D",
    "A",
  ], run = "plugin projects delete_all", desc = "Delete all projects" },
  { on = [
    "P",
    "m",
  ], run = "plugin projects 'merge current'", desc = "Merge current tab to other projects" },
  { on = [
    "P",
    "M",
  ], run = "plugin projects 'merge all'", desc = "Merge current project to other projects" },

  # Navigation
  # Up/Down
  { on = "i", run = "arrow prev", desc = "Previous file" },
  { on = "k", run = "arrow next", desc = "Next file" },
  { on = "<C-i>", run = "arrow -35%", desc = "Move cursor up half page" },
  { on = "<C-k>", run = "arrow 35%", desc = "Move cursor down half page" },
  { on = "I", run = "arrow -75%", desc = "Move cursor up one page" },
  { on = "K", run = "arrow 75%", desc = "Move cursor down one page" },
  # left/Right
  { on = "j", run = "leave", desc = "Back to the parent directory" },
  { on = "l", run = "enter", desc = "Enter the child directory" },
  { on = "J", run = "back", desc = "Back to previous directory" },
  { on = "L", run = "forward", desc = "Forward to next directory" },
  { on = [
    "p",
    "c",
  ], run = "plugin command", desc = "Yazi command prompt" },
  # { on = [ "h" ], run  = "plugin relative-motions", desc = "Trigger a new relative motion" },

  { on = "h", run = "plugin cdhist -- _ --fuzzy=fzf", desc = "Select a directory from history using cdhist" },

  # { on = "Enter",         run = "open",                        desc = "Open selected files" },
  { on = "Enter", run = "open --interactive", desc = "Open selected files interactively" },
  { on = "o", run = "open", desc = "Open selected files" },
  { on = "O", run = "open --interactive", desc = "Open selected files interactively" },
  { on = [
    "e",
    "r",
  ], run = "rename --cursor=before_ext", desc = "Rename selected file(s)" },
  { on = [
    "e",
    "_",
  ], run = "link --relative", desc = "Symlink the relative path of yanked files" },
  { on = [
    "e",
    "H",
  ], run = "hardlink", desc = "Hardlink yanked files" },
  { on = [
    "e",
    "d",
  ], run = "remove --permanently", desc = "Permanently delete selected files" },
  { on = ";", run = "shell --interactive", desc = "Run a shell command" },
  { on = ":", run = "shell --block --interactive", desc = "Run a shell command (block until finishes)" },
  { on = ".", run = "hidden toggle", desc = "Toggle the visibility of hidden files" },
  { on = [
    "e",
    "c",
  ], run = "create", desc = "Create a file (ends with / for directories)" },
  { on = [
    "s",
    "k",
  ], run = "plugin kdeconnect-send", desc = "Send selected files via KDE Connect" },
  # Copy

  { on = [
    "c",
    "c",
  ], run = "copy path", desc = "Copy the file path" },
  { on = [
    "c",
    "d",
  ], run = "copy dirname", desc = "Copy the directory path" },
  { on = [
    "c",
    "f",
  ], run = "copy filename", desc = "Copy the filename" },
  { on = [
    "c",
    "n",
  ], run = "copy name_without_ext", desc = "Copy the filename without extension" },

  # { on = [ "<C-c>", "c" ], run = "copy path",             desc = "Copy the file path" },
  #   { on = [ "<C-c>", "d" ], run = "copy dirname",          desc = "Copy the directory path" },
  #   { on = [ "<C-c>", "f" ], run = "copy filename",         desc = "Copy the filename" },
  # 	{ on = [ "<C-c>", "n" ], run = "copy name_without_ext", desc = "Copy the filename without extension" },
  { on = "y", run = "yank", desc = "Yank selected files (copy)" },
  { on = "x", run = "yank --cut", desc = "Yank selected files (cut)" },
  { on = [
    "p",
    "p",
  ], run = "paste", desc = "Paste yanked files" },
  { on = [
    "p",
    "f",
  ], run = "paste --force", desc = "Paste yanked files (overwrite if the destination exists)" },
  { on = [
    "p",
    "s",
  ], run = "link", desc = "Symlink the absolute path of yanked files" },
  { on = "Y", run = "unyank", desc = "Cancel the yank status" },
  { on = "X", run = "unyank", desc = "Cancel the yank status" },
  { on = "d", run = "remove", desc = "Trash selected files" },
  { on = [
    "p",
    "P",
  ], run = "plugin smart-paste", desc = "Paste into the hovered directory or CWD" },

  # Goto
  #  cd-git-root.yazi
  #   on   = ["g", "r"]
  # run  = "plugin cd-git-root"
  # desc = "Go to git repo root"

  { on = "G", run = "arrow bot", desc = "Go to bottom" },
  { on = [
    "G",
    "c",
  ], run = "plugin git-files", desc = "Show Git file changes" },
  { on = [
    "g",
    "g",
  ], run = "arrow top", desc = "Go to top" },
  { on = [
    "g",
    "h",
  ], run = "cd ~", desc = "Go home" },
  { on = [
    "g",
    "F",
  ], run = "follow", desc = "Follow hovered symlink" },

  { on = [
    "j",
    "c",
  ], run = "plugin jump-to-char", desc = "Jump to char" },

  { on = [
    "j",
    "i",
  ], run = "cd --interactive", desc = "Jump interactively" },
  { on = "j f", run = "plugin fzf", desc = "Jump to a file/directory via fzf" },
  { on = "j z", run = "plugin zoxide", desc = "Jump to a directory via zoxide" },
  { on = [
    "j",
    "m",
  ], run = "plugin sshfs -- jump", desc = "Jump to mount" },
  { on = [
    "j",
    "k",
  ], run = "plugin whoosh jump_by_key", desc = "Jump bookmark by key" },

  { on = [
    "j",
    "b",
  ], run = "plugin whoosh jump_by_fzf", desc = "Jump bookmark by fzf" },

  # { on = ["f, d"], run = "search --via=fd", desc = "Search files by name via fd" },
  { on = "f r", run = "search --via=rg", desc = "Search files by content via ripgrep" },
  { on = "f c", run = "escape --search", desc = "Cancel the ongoing search" },
  { on = "f e", run = "find --smart", desc = "Find next file" },
  { on = "f q", run = "find --previous --smart", desc = "Find previous file" },
  { on = "E", run = "find_arrow", desc = "Next found" },
  { on = "Q", run = "find_arrow --previous", desc = "Previous found" },
  { on = "<C-c>", run = "escape --search", desc = "Cancel the ongoing search" },

  # jump-to-char.yazi

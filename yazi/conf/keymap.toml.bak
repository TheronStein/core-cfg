    "s",
  ], run = "plugin sshfs -- menu", desc = "Open SSHFS options" },

  # RSYNC
  # { on = ["r" "c"], run = "plugin rsync", desc = "Copy files using rsync" },


  { on = [
    "r",
    "c",
  ], run = "plugin rsync --args='theron@chaoscore.com'", desc = "Copy files using rsync to default location" },
  { on = [
    "r",
    "n",
  ], run = [
    "escape --visual",
    "plugin thunar-bulk-rename",
  ], desc = "Rename selected file(s) (via thunar)" },

  #SSHFS
  { on = [
    "S",
    "m",
  ], run = "plugin sshfs -- mount --jump", desc = "Mount & jump" },
  { on = [
    "S",
    "u",
  ], run = "plugin sshfs -- unmount", desc = "Unmount SSHFS" },

  { on = [
    "S",
    "a",
  ], run = "plugin sshfs -- add", desc = "Add SSH host" },
  { on = [
    "S",
    "r",
  ], run = "plugin sshfs -- remove", desc = "Remove SSH host" },
  { on = [
    "S",
    "h",
  ], run = "plugin sshfs -- home", desc = "Go to mount home" },
  { on = [
    "S",
    "c",
  ], run = "cd ~/.ssh/", desc = "Go to ssh config" },

  { on = [
    "b",
    "f",
  ], run = "plugin whoosh fuzzy", desc = "Direct fuzzy search for bookmarks" },
  { on = [
    "b",
    "S",
  ], run = "plugin whoosh save", desc = "Add bookmark (hovered file/directory)" },
  { on = [
    "b",
    "s",
  ], run = "plugin whoosh save_cwd", desc = "Add bookmark (current directory)" },
  { on = [
    "b",
    "t",
  ], run = "plugin whoosh save_temp", desc = "Add temporary bookmark (hovered file/directory)" },
  { on = [
    "b",
    "T",
  ], run = "plugin whoosh save_cwd_temp", desc = "Add temporary bookmark (current directory)" },
  { on = [
    "b",
    "r",
  ], run = "plugin whoosh rename_by_fzf", desc = "Rename bookmark by fzf" },
  { on = [
    "b",
    "R",
  ], run = "plugin whoosh rename_by_key", desc = "Rename bookmark by key" },
  { on = [
    "b",
    "d",
  ], run = "plugin whoosh delete_by_fzf", desc = "Delete bookmarks by fzf (use TAB to select multiple)" },
  { on = [
    "b",
    "F12",
  ], run = "plugin whoosh delete_all", desc = "Delete all user bookmarks" },
  { on = [
    "b",
    "D",
  ], run = "plugin whoosh delete_by_key", desc = "Delete bookmark by key" },

  #RESTORE_TAB_CLOSE
  # on = [ "<C-w>" ]

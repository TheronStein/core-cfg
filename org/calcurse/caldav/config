# ~/.calcurse/caldav/config
# Configuration file for calcurse-caldav Gmail calendar integration

[General]
# Path to the calcurse binary that is used for importing/exporting items.
Binary = calcurse

DryRun = No

# Host name of the server that hosts CalDAV (Google's CalDAV server)
Hostname = apidata.googleusercontent.com

# Path to the CalDAV calendar on the host specified above.
# Replace YOUR_EMAIL@gmail.com with your actual Gmail address
Path = /caldav/v2/theron.stein@gmail.com/events/

# Authentication method - must be oauth2 for Google Calendar
AuthMethod = oauth2

# Enable this if you want to skip SSL certificate checks.
InsecureSSL = No

# Disable this if you want to use HTTP instead of HTTPS.
# Using plain HTTP is highly discouraged.
HTTPS = Yes

# This option allows you to filter the types of tasks synced.
# Set to "cal" for Google Calendar since it doesn't support tasks
SyncFilter = cal

# Disable this option to actually enable synchronization. If it is enabled,
# nothing is actually written to the server or to the local data files.
# Set to No once you've tested the configuration
# DryRun = Yes

# Enable this if you want detailed logs written to stdout.
Verbose = Yes

[OAuth2]
# Your Google API Client ID (replace with actual value from Google Console)
ClientID = 222948220981-bv9uq6aaqvcihgknnokd9eou5483fo6m.apps.googleusercontent.com 


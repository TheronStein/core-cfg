# ClientSecret = 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"

# OAuth2 scope for Google Calendar access
Scope = https://www.googleapis.com/auth/calendar

# Redirect URI for OAuth2 authentication
RedirectURI = http://127.0.0.1
